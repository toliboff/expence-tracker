<div class="container flex-column">
 <%= render partial: 'shared/header', :locals => { :title => "TRANSACTIONS", :back_url => user_groups_path, :back_button => true } %>
 <div class="total-amount flex-row justify-space-between">
    <span><%= @group.name %>:</span>
    <span>$<%= '%.2f' % @total %></span>
  </div>

<ul class='list flex-column'>
  <% @entities.each do |entity|%>
    <li class='card flex-row'> 
      <div class='group-info flex-row'>
      <div class='flex-column justify-space-between'>
        <h3><%= entity.name %></h3>
        <span>
            <%= entity.created_at.strftime("%d") %>
            <%= I18n.t("date.abbr_month_names")[entity.created_at.strftime("%m").to_i]%>
            <%= entity.created_at.strftime("%Y")%>
        <span>
      </div>
      <span>$<%= '%.2f' % entity.amount %></span>
      </div>

    </li>
  <% end %>
</ul>

<%= link_to  'ADD ENTITY', new_user_group_entity_path(@group.user, @group), class:'add-button' %>